<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>CheckCode</servlet-name>
        <servlet-class>com.tools.CheckCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckCode</servlet-name>
        <url-pattern>/CheckCode</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>com.tools.Message</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/Message</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AcCheck</servlet-name>
        <servlet-class>com.tools.AcCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcCheck</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>KeyServlet</servlet-name>
        <servlet-class>com.Cotroller.KeyServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>KeyServlet</servlet-name>
        <url-pattern>/KeyServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.Cotroller.FileUploadServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/FileUpload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>com.Cotroller.FileDownloadServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/FileDownload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TrueDownload</servlet-name>
        <servlet-class>com.Cotroller.DownLoadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrueDownload</servlet-name>
        <url-pattern>/TrueDownload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserSearch</servlet-name>
        <servlet-class>com.tools.UserSearchCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSearch</servlet-name>
        <url-pattern>/UserSearch</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PubsDownload</servlet-name>
        <servlet-class>com.Cotroller.PubsDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PubsDownload</servlet-name>
        <url-pattern>/pubsdownload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShareDownload</servlet-name>
        <servlet-class>com.Cotroller.ShareDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShareDownload</servlet-name>
        <url-pattern>/sharedownload</url-pattern>
    </servlet-mapping>
</web-app>
